<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:hint="score"
                        android:text=""
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rate"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="rete"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:backgroundTint="@color/color"
                        android:shadowRadius="10"
                        android:layout_margin="5dp"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/EtgarButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אתגר"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/cefel_ad_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="כפל עד 20"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cefel_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="לוח הכפל"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/num_A"
                    android:layout_width="150dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_margin="2.5dp"
                    android:background="@color/new_color"
                    android:gravity="center"
                    android:hint="put a number"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/multiplication"
                    android:layout_width="150dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_margin="2.5dp"
                    android:background="@color/new_color"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/num_B"
                    android:layout_width="150dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_margin="2.5dp"
                    android:background="@color/new_color"
                    android:gravity="center"
                    android:hint="put a number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/answer"
                    android:layout_width="150dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_margin="2.5dp"
                    android:background="@color/new_color"
                    android:gravity="center"
                    android:hint="put your answer"
                    android:inputType="number" />


            </LinearLayout>

        <Button
            android:id="@+id/chak"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_margin="2.5dp"
            android:gravity="center"
            android:text="בדיקה"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:backgroundTint="@color/read"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/show_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHOW ALL USERS"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"/>



        </LinearLayout>

    </FrameLayout>


    </ScrollView>


